<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:padding="@dimen/_5sdp"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
      >
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_67sdp"
    android:layout_height="@dimen/_67sdp"
    app:cardCornerRadius="@dimen/_25sdp"
    app:cardElevation="5dp"
    android:elevation="@dimen/_15sdp"
    >

        <ImageView
            android:id="@+id/item_restaurant_orders_img_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/freis"
            android:background="@drawable/round_image"
            android:scaleType="centerCrop"
             />
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="@dimen/_3sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/janna"
                android:text="تشكن فيوز"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/janna"
                android:text="20 ريال"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/janna"
                android:text="الكميه"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_details_fragment_btn_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:background="@drawable/shadow_white_circle"
                    android:drawableStart="@drawable/ic_blue_plus" />


                <TextView
                    android:id="@+id/item_details_fragment_tv_quantity"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:elevation="5dp"
                    android:background="@drawable/shadow_white_shape"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_details_fragment_btn_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:background="@drawable/shadow_white_circle"
                    android:drawableStart="@drawable/ic_minus" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_details_fragment_btn_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="5dp"
        android:background="@drawable/shape_cancel_order_icon"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
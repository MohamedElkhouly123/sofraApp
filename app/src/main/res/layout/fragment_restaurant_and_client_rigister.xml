<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|start"
        android:background="@drawable/background2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backg"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="?attr/actionBarSize"
                >
                <ImageView
                    android:id="@+id/client_conect_data_img_restraunt_image_botton"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/new_user"
                    android:visibility="gone"
                    android:background="@drawable/button_order_owner"
                    android:padding="@dimen/_10sdp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_restrant_name"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_marginTop="@dimen/_20sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_restrant_name_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_person_white_24dp"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_email"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                   >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_email_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:hint="@string/enter_email"
                        android:ems="10"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_order_time"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_order_time_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:hint="@string/order_time"
                        android:inputType="textAutoComplete" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/client_registers_buyer_fragment_til_order_phone"
                    style="@style/text_input"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/client_registers_buyer_order_time_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_phone_white_24dp"
                        android:hint="@string/phone"
                        android:ems="10"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_city"
                    style="@style/text_input"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    >
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_65sdp"
                   >

                   <EditText
                       android:id="@+id/restaurant_registers_buyer_city_etxt"

                       style="@style/EditText"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:drawableStart="@drawable/ic_home_white_24dp"
                       android:layout_marginTop="@dimen/_15sdp"
                       android:focusable="false"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <ImageView
                       android:id="@+id/imageView"
                       android:layout_width="@dimen/_24sdp"
                       android:layout_height="match_parent"
                       android:layout_marginTop="@dimen/_8sdp"
                       android:layout_marginEnd="@dimen/_8sdp"
                       android:src="@drawable/ic_arrow_downward_black_24dp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"  />

                   <Spinner
                       android:id="@+id/restaurant_registers_buyer_fragment_sp_city"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_45sdp"
                       android:layout_marginStart="@dimen/_26sdp"
                       android:layout_marginBottom="@dimen/_10sdp"
                       android:gravity="center_vertical"
                       android:background="@android:color/transparent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

               </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_neighborhood"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:errorTextAppearance="@style/error_appearance"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_65sdp">

                        <EditText
                            android:id="@+id/restaurant_registers_buyer_neighborhood_etxt"

                            style="@style/EditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:drawableStart="@drawable/ic_home_white_24dp"
                            android:focusable="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_arrow_downward_black_24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/restaurant_registers_buyer_fragment_sp_neighborhood"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginStart="@dimen/_26sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_password"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_password_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_https_white_24dp"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"  />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_rigister_fragment_til_confirm_password"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_confirm_password_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_https_white_24dp"
                        android:hint="@string/enter_confirm_password"
                        android:inputType="textPassword"  />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/restaurant_registers_buyer_fragment_til_least_range_of_order"
                    style="@style/text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:errorTextAppearance="@style/error_appearance"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_registers_buyer_least_range_of_order_etxt"
                        style="@style/EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/ic_note_black_24dp"
                        android:hint="@string/least_range_of_order"
                        android:inputType="textAutoComplete" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/restaurant_registers_buyer_fragment_til_delevery_price"
                style="@style/text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:visibility="gone"

                    app:errorTextAppearance="@style/error_appearance"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_registers_buyer_delevery_price_etxt"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_monetization_on_black_24dp"
                    android:hint="@string/delevery_price"
                    android:inputType="textAutoComplete" />
            </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/restaurant_register_buer_next_btn"
                    style="@style/Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_35sdp"
                    />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
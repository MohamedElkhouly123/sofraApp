<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_24sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:text="هل انت متأكد من الخروج ؟"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/janna"
            android:textSize="@dimen/_16ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_45sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/item_sign_out_dialog_btn_no"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_30sdp"
                android:elevation="3dp"
                android:background="@drawable/shape_close_icon" />

            <Button
                android:id="@+id/item_sign_out_dialog_btn_yes"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_30sdp"
                android:elevation="3dp"

                android:layout_toEndOf="@id/item_sign_out_dialog_btn_no"
                android:background="@drawable/shape_right_icon" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
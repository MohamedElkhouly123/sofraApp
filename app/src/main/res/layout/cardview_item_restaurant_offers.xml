<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_restaurant_offers_img_edit"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/ic_green_edit" />

        <ImageView
            android:id="@+id/item_restaurant_offers_img_remove"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/ic_pink_basket" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_105sdp"
                android:layout_marginStart="@dimen/_78sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/gray"
                app:cardCornerRadius="@dimen/_25sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        >
                    <TextView
                        android:id="@+id/item_restaurant_offers_tv_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:textAlignment="center"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="احصل على خصم 10% لاول طلب لك"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/janna"
                        android:textSize="@dimen/_12ssp" />
                        <Button
                            android:id="@+id/client_and_restaurant_login_buer_next_btn"
                            style="@style/Button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            android:text="التفاصيل"
                            android:layout_marginTop="@dimen/_15sdp"
                            />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_restaurant_offers_img_offer"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/backg"
             />
        </LinearLayout>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>

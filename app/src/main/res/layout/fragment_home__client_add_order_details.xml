<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="تفاصيل الطلب"
        android:fontFamily="@font/janna"
        android:textColor="@color/blue"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/shadow_gray_shape"
        android:gravity="start"
        android:maxLines="7"
        android:fontFamily="@font/janna"
        android:hint="أضافه ملاحظات"
        android:padding="@dimen/_10sdp" />
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MoreText"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:text="عنوان التوصيل"

             />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="start"
            android:maxLines="7"
            android:textColorHint="@color/pink"
            android:background="@android:color/transparent"
            android:fontFamily="@font/janna"
            android:hint="العنوان"
            android:padding="@dimen/_2sdp" />
        <TextView
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MoreText"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:text="الدفع"

            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                >

                <TextView
                    android:id="@+id/title4"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الدفع اونلاين"
                    android:textSize="@dimen/_12ssp"

                    />

                <CheckBox
                    android:id="@+id/checkbox_item_chbx"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:button="@drawable/custom_checkbox"
                    android:checked="true"
                    android:fontFamily="@font/janna"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title5"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نقدا عند الاستلام"
                    android:textSize="@dimen/_12ssp"

                    />

                <CheckBox
                    android:id="@+id/checkbox_item_chbx2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:button="@drawable/custom_checkbox"
                    android:checked="true"
                    android:fontFamily="@font/janna"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

             >

                <TextView
                    android:id="@+id/title58"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المجموع : "
                    android:textSize="@dimen/_12ssp"

                    />

                <TextView
                    android:id="@+id/title54"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الدفع اونلاين"
                    android:textSize="@dimen/_12ssp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/titlejkj58"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رسوم التوصيل : "
                    android:textSize="@dimen/_12ssp"

                    />

                <TextView
                    android:id="@+id/titlekj54"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الدفع اونلاين"
                    android:textSize="@dimen/_12ssp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/titlev58"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المبلغ الاجمالى : "
                    android:textSize="@dimen/_12ssp"

                    />

                <TextView
                    android:id="@+id/titlejk54"
                    style="@style/MoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المبلغ الاجمالى"
                    android:textSize="@dimen/_12ssp"

                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/client_and_restaurant_login_buer_next_btn"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تأكيد الطلب"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_35sdp"
            />
</LinearLayout>
</ScrollView>

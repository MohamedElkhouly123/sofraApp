<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/gradient_btn_shape</item>
        <item name="android:layout_marginStart">@dimen/_65sdp</item>
        <item name="android:layout_marginEnd">@dimen/_65sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditText">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_6ssp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="text_input">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
    </style>

    <style name="text_input2">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:background">@drawable/shadow_gray_shape</item>
    </style>

    <style name="error_appearance">
        <item name="android:textColor">@color/txt_color2</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHighlight">@color/txt_color2</item>
        <item name="android:textColorHint">@color/txt_color2</item>
        <item name="android:textColorLink">@color/txt_color2</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="spinner_style">

        <item name="android:background">@drawable/txtstyle</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:dropDownWidth">@dimen/_200sdp</item>
    </style>

    <style name="text_restaurant_informations">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="view_style">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="MoreText">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText2">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginBottom">@dimen/_5ssp</item>
        <item name="android:padding">@dimen/_3ssp</item>
        <item name="android:layout_marginStart">@dimen/_5ssp</item>
        <item name="android:layout_marginEnd">@dimen/_5ssp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--dialog theme-->
    <style name="customDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Switch">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">
            @android:color/holo_red_light
        </item>
    </style>
</resources>



